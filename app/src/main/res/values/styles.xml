<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
    </style>

    <style name="InputText" parent="@android:style/TextAppearance.Medium">
        <item name="android:background">#ffffff</item>
        <item name="android:alpha">0.7</item>
        <item name="android:padding">10dp</item>
        <item name="android:innerRadius">10dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="SimpleButton" parent="@android:style/TextAppearance.Medium">
        <item name="android:background">@drawable/button_gradient</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">#555555</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:state_focused">true</item>
        <item name="android:state_pressed">true</item>
    </style>

    <style name="MenuItem" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:onClick">menuClick</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="MenuImage" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="MenuText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="DataLine" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">10</item>
    </style>

    <style name="DataBlock" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="WrapContent" parent="@android:style/TextAppearance.Medium">
         <item name="android:layout_width">wrap_content</item>
         <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BtnBack" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">14dp</item>
        <item name="android:background">@drawable/button_gradient</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="Btn" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">14dp</item>
        <item name="android:background">@drawable/button_gradient</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="OneColor" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>


</resources>